<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>
      Karma Capability
    </div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Karma'}}'
        data-type='karma_capability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='karma'}}
      </a>
    </div>
  </li>
  {{#each karma_capability as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name flexrow'>
        <div class='item-image'>
          <a class='use_karma'><img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            /></a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='karma_capability'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='karma_capability'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>